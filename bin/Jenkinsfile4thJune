  echo "Jenkins URL ${env.JENKINS_URL}"
  echo "JOB Name ${env.JOB_NAME}"
    properties([
    buildDiscarder(logRotator(numToKeepStr: '3')),
    pipelineTriggers([
        pollSCM('* * * * *')
    ])
])
    
    //def mvnHome = tool name: 'maven3.6.1', type: 'maven'
    def mvnHome = tool name: 'maven3.6.1', type: 'maven'
